---
import { SITE_CONFIG } from "../config/site";
import SocialLinks from "./SocialLinks.astro";
import WhatsAppIcon from "./icons/WhatsAppIcon.astro";
---

<section id="contact" class="section bg-secondary-50 dark:bg-secondary-950">
  <div class="container-custom">
    <div class="max-w-4xl mx-auto">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <!-- Información de contacto -->
        <div class="slide-up">
          <!-- Email -->
          <div class="flex items-start mb-8">
            <div class="shrink-0 mt-1">
              <svg
                class="w-7 h-7 text-accent-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
            </div>
            <div class="ml-4">
              <h3
                class="text-xl font-semibold text-secondary-900 dark:text-white mb-2"
              >
                Envíanos un Email
              </h3>
              <p class="text-secondary-600 dark:text-secondary-300 mb-4">
                {SITE_CONFIG.email}
              </p>
              <a
                href={`mailto:${SITE_CONFIG.email}?subject=Consulta%20sobre%20Speedcubing%20Colombia&body=Hola,%0A%0ATengo%20una%20consulta%20sobre%20...`}
                class="btn-primary inline-flex items-center"
              >
                <svg
                  class="w-5 h-5 mr-2"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                </svg>
                Enviar Email
              </a>
            </div>
          </div>

          <!-- Teléfono -->
          <div class="flex items-start mb-8">
            <div class="shrink-0 mt-1">
              <svg
                class="w-7 h-7 text-accent-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
              </svg>
            </div>
            <div class="ml-4">
              <h3
                class="text-xl font-semibold text-secondary-900 dark:text-white mb-2"
              >
                Llámanos o escríbenos
              </h3>
              <p class="text-secondary-600 dark:text-secondary-300 mb-4">
                {SITE_CONFIG.phone}
              </p>
              <div class="flex flex-col sm:flex-row gap-3">
                <a
                  href={`tel:+${SITE_CONFIG.whatsapp}`}
                  class="btn-secondary inline-flex items-center justify-center"
                >
                  <svg
                    class="w-5 h-5 mr-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                    ></path>
                  </svg>
                  Llamar
                </a>
                <a
                  href={`https://wa.me/${SITE_CONFIG.whatsapp}?text=Hola,%20tengo%20una%20consulta%20sobre%20Speedcubing%20Colombia`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="btn-primary inline-flex items-center justify-center bg-[#25D366] hover:bg-[#20BA5A] border-[#25D366] hover:border-[#20BA5A]"
                >
                  <WhatsAppIcon class="w-5 h-5 mr-2" />
                  WhatsApp
                </a>
              </div>
            </div>
          </div>

          <!-- Redes Sociales -->
          <div>
            <h3
              class="text-lg font-semibold text-secondary-900 dark:text-white mb-4"
            >
              Síguenos en Redes Sociales
            </h3>
            <p class="text-secondary-600 dark:text-secondary-300 mb-6">
              Mantente al día con las últimas noticias, competencias y contenido
              de la comunidad Speedcubing.
            </p>
            <SocialLinks iconClass="w-7 h-7" />
          </div>
        </div>

        <!-- Imagen ilustrativa -->
        <div class="slide-up" style="animation-delay: 150ms">
          <div
            class="card p-8 text-center border border-secondary-200 dark:border-secondary-700 bg-gradient-to-br from-accent-50 to-accent-100 dark:from-accent-950 dark:to-secondary-900"
          >
            <div
              class="w-20 h-20 mx-auto mb-6 bg-accent-200 dark:bg-accent-800 rounded-full flex items-center justify-center"
            >
              <svg
                class="w-10 h-10 text-accent-600 dark:text-accent-300"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                ></path>
              </svg>
            </div>
            <h3
              class="text-xl font-semibold mb-4 text-secondary-900 dark:text-white"
            >
              ¡Únete a Nuestra Comunidad!
            </h3>
            <p class="text-secondary-600 dark:text-secondary-300 mb-6">
              Conecta con Speedcubers de todo Colombia, participa en
              competencias y mejora tus habilidades con nuestra comunidad.
            </p>
            <div class="space-y-3">
              <a
                href="https://www.worldcubeassociation.org/competitions?region=CO"
                class="btn-accent w-full"
              >
                Ver Próximas Competencias
              </a>
              <a href="/blog" class="btn-outline w-full">
                Leer Publicaciones
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
