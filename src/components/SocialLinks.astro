---
import { SOCIAL_LINKS } from "../config/site";
import FacebookIcon from "./icons/FacebookIcon.astro";
import InstagramIcon from "./icons/InstagramIcon.astro";
import YouTubeIcon from "./icons/YouTubeIcon.astro";

interface Props {
  class?: string;
  iconClass?: string;
  variant?: "light" | "dark";
}

const {
  class: className = "flex space-x-4",
  iconClass = "w-6 h-6",
  variant = "dark",
} = Astro.props;

const baseClass =
  variant === "light"
    ? "text-gray-400 hover:text-primary-400 transition-colors"
    : "text-secondary-500 hover:text-accent-500 dark:text-secondary-400 dark:hover:text-accent-400 transition-colors";
---

<div class={className}>
  <a
    href={SOCIAL_LINKS.instagram}
    class={baseClass}
    aria-label="Síguenos en Instagram"
    target="_blank"
    rel="noopener noreferrer"
  >
    <InstagramIcon class={iconClass} />
  </a>
  <a
    href={SOCIAL_LINKS.youtube}
    class={baseClass}
    aria-label="Síguenos en YouTube"
    target="_blank"
    rel="noopener noreferrer"
  >
    <YouTubeIcon class={iconClass} />
  </a>
  <a
    href={SOCIAL_LINKS.facebook}
    class={baseClass}
    aria-label="Síguenos en Facebook"
    target="_blank"
    rel="noopener noreferrer"
  >
    <FacebookIcon class={iconClass} />
  </a>
</div>
