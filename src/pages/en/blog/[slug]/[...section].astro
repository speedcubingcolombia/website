---
import { getCollection, type CollectionEntry } from "astro:content";
import ArticleTabs from "../../../../components/ArticleTabs.astro";
import Footer from "../../../../components/Footer.astro";
import Header from "../../../../components/Header.astro";
import LanguageSwitcher from "../../../../components/LanguageSwitcher.astro";
import Layout from "../../../../layouts/Layout.astro";
import {
  getAvailableLanguages,
  getCanonicalSlug,
} from "../../../../utils/blog";

export async function getStaticPaths() {
  const allPosts = await getCollection("blog");
  const paths: any[] = [];

  // Filter only English posts
  const englishPosts = allPosts.filter((post) => post.slug.startsWith("en/"));

  // Group posts by base slug (folder)
  const postsByBase = new Map<string, CollectionEntry<"blog">[]>();

  englishPosts.forEach((post) => {
    const slugWithoutLang = post.slug.replace("en/", "");
    const parts = slugWithoutLang.split("/");
    if (parts.length > 1) {
      const baseSlug = parts[0];
      if (!postsByBase.has(baseSlug)) {
        postsByBase.set(baseSlug, []);
      }
      postsByBase.get(baseSlug)!.push(post);
    }
  });

  // Generate routes for multi-section articles
  postsByBase.forEach((posts, baseSlug) => {
    // Sort: index.md first, then alphabetically
    posts.sort((a, b) => {
      const aSlug = a.slug.replace("en/", "");
      const bSlug = b.slug.replace("en/", "");
      const aIsIndex = aSlug.endsWith("/index");
      const bIsIndex = bSlug.endsWith("/index");
      if (aIsIndex) return -1;
      if (bIsIndex) return 1;
      return a.slug.localeCompare(b.slug);
    });

    posts.forEach((post) => {
      const slugWithoutLang = post.slug.replace("en/", "");
      const sectionSlug = slugWithoutLang.split("/")[1];
      const isIndex = sectionSlug === "index";

      if (!isIndex) {
        paths.push({
          params: {
            slug: baseSlug,
            section: sectionSlug,
          },
          props: {
            post,
            allSections: posts,
            baseSlug,
            currentSection: sectionSlug,
          },
        });
      }
    });
  });

  return paths;
}

type BlogPost = CollectionEntry<"blog">;

interface Props {
  post: BlogPost;
  allSections: BlogPost[];
  baseSlug: string;
  currentSection: string;
}

const { post, allSections, baseSlug, currentSection } = Astro.props;
const { Content } = await post.render();

// Get the main post (index)
const allPosts = await getCollection("blog");
const mainPost =
  allPosts.find((p) => p.slug === `en/${baseSlug}`) ||
  allPosts.find((p) => p.slug === `en/${baseSlug}/index`) ||
  post;

const formattedDate = new Intl.DateTimeFormat("en-US", {
  day: "numeric",
  month: "long",
  year: "numeric",
}).format(mainPost.data.date);

// Prepare tabs
const tabs = [
  {
    label: mainPost.data.tabLabel || mainPost.data.title,
    slug: "index",
    isActive: false,
  },
  ...allSections
    .filter((section) => {
      const slugWithoutLang = section.slug.replace("en/", "");
      return slugWithoutLang.includes("/");
    })
    .map((section) => {
      const slugWithoutLang = section.slug.replace("en/", "");
      const sectionSlug = slugWithoutLang.split("/")[1];
      return {
        label: section.data.tabLabel || section.data.title,
        slug: sectionSlug,
        isActive: sectionSlug === currentSection,
      };
    }),
];

const canonicalUrl = Astro.site
  ? new URL(`/en/blog/${baseSlug}/${currentSection}`, Astro.site).toString()
  : `/en/blog/${baseSlug}/${currentSection}`;

// Get current full slug for language switcher (convert English slug to canonical Spanish)
const currentEnglishSlug = `${baseSlug}/${currentSection}`;
const canonicalSlug = getCanonicalSlug(currentEnglishSlug, "en");
const availableLanguages = await getAvailableLanguages(canonicalSlug);
---

<Layout
