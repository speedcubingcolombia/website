---
import { getCollection, type CollectionEntry } from "astro:content";
import ArticleTabs from "../../../components/ArticleTabs.astro";
import Footer from "../../../components/Footer.astro";
import Header from "../../../components/Header.astro";
import LanguageSwitcher from "../../../components/LanguageSwitcher.astro";
import Layout from "../../../layouts/Layout.astro";
import { getAvailableLanguages, getCanonicalSlug } from "../../../utils/blog";

export async function getStaticPaths() {
  const posts = await getCollection("blog");

  // Filter only English posts (en/*)
  const englishPosts = posts.filter((post) => post.slug.startsWith("en/"));

  // Group by base slug (after en/)
  const multiSectionPosts = new Map<string, CollectionEntry<"blog">[]>();
  englishPosts.forEach((post) => {
    if (post.data.multiSection) {
      // Get base slug without language prefix
      const slugParts = post.slug.replace("en/", "").split("/");
      const baseSlug = slugParts[0];
      if (!multiSectionPosts.has(baseSlug)) {
        multiSectionPosts.set(baseSlug, []);
      }
      multiSectionPosts.get(baseSlug)!.push(post);
    }
  });

  const paths: any[] = [];

  // Routes for multi-section article indexes
  multiSectionPosts.forEach((sections, baseSlug) => {
    // Sort: normalized index first (no slash), then explicit index, then alphabetically
    sections.sort((a, b) => {
      const aSlugWithoutLang = a.slug.replace("en/", "");
      const bSlugWithoutLang = b.slug.replace("en/", "");
      const aIsNormalizedIndex = !aSlugWithoutLang.includes("/");
      const bIsNormalizedIndex = !bSlugWithoutLang.includes("/");
      const aIsIndex = aSlugWithoutLang.endsWith("/index");
      const bIsIndex = bSlugWithoutLang.endsWith("/index");

      if (aIsNormalizedIndex) return -1;
      if (bIsNormalizedIndex) return 1;
      if (aIsIndex) return -1;
      if (bIsIndex) return 1;
      return a.slug.localeCompare(b.slug);
    });

    const indexPost = sections[0];
    paths.push({
      params: { slug: baseSlug },
      props: {
        post: indexPost,
        multiSection: true,
        allSections: sections,
        baseSlug,
      },
    });
  });

  return paths;
}

type BlogPost = CollectionEntry<"blog">;

interface Props {
  post: BlogPost;
  multiSection: boolean;
  allSections?: BlogPost[];
  baseSlug?: string;
}

const { post, multiSection, allSections, baseSlug } = Astro.props;
const { Content } = await post.render();
const formattedDate = new Intl.DateTimeFormat("en-US", {
  day: "numeric",
  month: "long",
  year: "numeric",
}).format(post.data.date);
const canonicalUrl = Astro.site
  ? new URL(`/en/blog/${baseSlug}`, Astro.site).toString()
  : `/en/blog/${baseSlug}`;

// If multi-section, prepare tabs
let tabs: any[] = [];
if (multiSection && allSections && baseSlug) {
  tabs = [
    {
      label: post.data.tabLabel || post.data.title,
      slug: "index",
      isActive: true,
    },
    ...allSections
      .filter((section) => {
        const slugWithoutLang = section.slug.replace("en/", "");
        return slugWithoutLang.includes("/");
      })
      .map((section) => {
        const slugWithoutLang = section.slug.replace("en/", "");
        const sectionSlug = slugWithoutLang.split("/")[1];
        return {
          label: section.data.tabLabel || section.data.title,
          slug: sectionSlug,
          isActive: false,
        };
      }),
  ];
}

// Get canonical Spanish slug and available translations
const canonicalSlug = getCanonicalSlug(baseSlug || "", "en");
const availableLanguages = await getAvailableLanguages(canonicalSlug);
